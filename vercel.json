{
  "version": 2,
  "buildCommand": "cd b2b-code && npm run build",
  "outputDirectory": "b2b-code/dist",
  "builds": [
    {
      "src": "b2b-code/src/api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "b2b-code/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "b2b-code/src/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "b2b-code/dist/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "VITE_API_URL": "@vite_api_url"
  }
}
